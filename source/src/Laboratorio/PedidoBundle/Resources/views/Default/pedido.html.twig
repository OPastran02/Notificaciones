                                            <ul>
                                                {% for d in form.vars.value.establecimiento.direcciones %}
                                                    <li>
                                                        {{ d.calle.calle ~ ' ' ~ d.altura }}
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </i>
                                </h5>

                                <hr>
                            {% endif %}
                        {% endif %}

