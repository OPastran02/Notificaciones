		jQuery(document).ready(function() {
		   //Custom.LoadContentTable();
		   TablaFajas.init(routesUsuario.myroutes.tablaFajas);
		});

                jQuery(document).ready(function() {                                        
           $('.fecha-picker').datepicker({ dateFormat: "dd-mm-yy" });
        });
    </script>

{% endblock %}