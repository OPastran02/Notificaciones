{% extends '::base.html.twig' %}


{% block stylesheets %}

    {{ parent() }}
    <link href="{{ asset('public/assets/pages/css/profile.min.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block pagecontent %}
    <div class="row">
        <div class="col-md-12">
            <!-- SIDEBAR USERPIC -->
            <div class="profile-userpic">                
                <img src="{{ asset('public/assets/pages/media/users/'~historial.0.usuarioMotificador.usuario~'.JPG') }}" class="img-responsive" alt="" style="width:110px; height:150px"> </div>
            <!-- END SIDEBAR USERPIC -->
            <!-- SIDEBAR USER TITLE -->
            <div class="profile-usertitle">
                <div class="profile-usertitle-name"> {{historial.0.usuarioMotificador.apellido}}, {{historial.0.usuarioMotificador.nombre}} </div>
                <div class="profile-usertitle-job"> {{historial.0.usuarioMotificador.area.area}} </div>
            </div>
            <!-- END SIDEBAR USER TITLE -->
            <!-- SIDEBAR MENU -->
        <!--
            <div class="profile-usermenu">
                <ul class="nav">
                    <li class="active">
                        <a href="#">
                            <i class="icon-home"></i> Ultima conexión: {{historial.0.usuarioMotificador.UltimaConexion|date("d-m-Y H:i:s")}} </a>
                    </li>
                    <li class="active">
                        <a href="#">
                            <i class="icon-settings"></i> Primer ingreso al sistema {{historial.0.usuarioMotificador.UltimaConexion|date("d-m-Y")}}</a>
                    </li>
                </ul>
            </div>
            -->
        </div>
    </div>
        <!-- END MENU -->
    <!-- END PAGE TITLE-->
    <!-- END PAGE HEADER-->
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit bg-inverse ">
                <div class="portlet-body">
                    <div class="timeline  white-bg ">
                    {% for e in historial %}
                        <div class="timeline-item">
                            <div class="timeline-badge">
                                <img class="timeline-badge-userpic" src="{{ asset('public/assets/pages/media/users/'~e.usuarioMotificador.usuario~'.JPG') }}"> </div>
                            <div class="timeline-body">
                                <div class="timeline-body-arrow"> </div>
                                <div class="timeline-body-head">
                                    <div class="timeline-body-head-caption">
                                        <a class="timeline-body-title font-blue-madison">{{e.usuarioMotificador.apellido}}, {{e.usuarioMotificador.nombre}}</a>
                                        <span class="timeline-body-time font-grey-cascade">acción realizada a las {{e.fecha|date("H:i:s")}} del día {{e.fecha|date("d-m-Y")}}</span>
                                    </div>
                                </div>
                                <div class="timeline-body-content">
                                    {% if e.valorAnterior != "CODEDGCONTANUEVO01" %}
                                        <span class="font-grey-cascade"> 
                                        El usuario cambio del Módulo <b>{{e.tabla}}</b> 
                                        id:<b>{{e.idTabla}}</b>
                                        </br> el campo <b>{{e.campo}}</b> 
                                        </br>Valor anterior: <b>{{e.valorAnterior}}</b> 
                                        </br>Valor nuevo: <b>{{e.valorNuevo}}</b> 
                                        </span>
                                    {% else %}
                                       <span class="font-grey-cascade"> El usuario Creo un/a nuevo/a <b>{{e.campo}}</b> en el módulo <b>{{e.tabla}}</b> 
                                       Id:<b>{{e.idTabla}}</b> 
                                       </br>el valor nuevo es: {{e.valorNuevo}}</span>   
                                    {% endif %} 
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                        <!-- END TIMELINE ITEM -->
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{asset('public/assets/pages/scripts/profile.min.js')}}" type="text/javascript"></script>
     <script src="{{asset('public/pages/scripts/timeline.min.js')}}" type="text/javascript"></script>   
    {{ parent() }}

{% endblock %}