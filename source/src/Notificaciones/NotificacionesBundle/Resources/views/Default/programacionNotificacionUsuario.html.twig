<script src="{{ asset('public/assets/pages/scripts/components-select2.min.js') }}" type="text/javascript"></script>

<script>
	$(document).ready(function(){
        $( "#formulario").on( "submit", function( event ) {
	        event.preventDefault();        
	        Notificaciones.send();
	    });
	});
</script>