            },
        };

        function excel() {
            Notificaciones.excel(routesAutorizar.myroutes.excelAutorizar);
        }

        function VistaPrevia(id) {
            Inbox.vistasautorizar(id);
        }

	   jQuery(document).ready(function() {   
           $('.fecha-picker').datepicker({ dateFormat: "dd-mm-yy" });


        $("#reiniciar1").on("click", function() {
            $("#order_3").val(null).trigger("change"); 
            $("#order_4").val(null).trigger("change"); 
        });		                    		   		   
	   TablaAutorizar.init(routesAutorizar.myroutes.tablaAutorizar);           
       UIButtons.init();
	  
	});
    </script>
    <!-- END PAGE LEVEL SCRIPTS -->	
{% endblock %}
