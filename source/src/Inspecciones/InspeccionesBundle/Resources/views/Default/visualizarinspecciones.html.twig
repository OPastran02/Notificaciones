                                'attr': {
                                    'class': 'make-switch switch-large',
                                    'type': 'checkbox',
                                    'data-label-icon': 'fa fa-youtube',
                                    'data-on-text': 'SÍ',
                                    'data-off-text':'NO'}
                            }) }}
                            <span style="color: red;">
                                {{ form_errors(form.cumplioIntimacion) }}
                            </span>
                        </div>
                    </div>
                    {% else %}
                        {{ form_widget(form.cumplioIntimacion, {
                            'attr': {
