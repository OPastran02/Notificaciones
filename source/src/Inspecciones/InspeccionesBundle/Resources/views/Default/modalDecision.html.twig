{% set lista = establecimientos|split('***') %}
{% set datos = lista[:((lista|length)-1)] %}

<div class="table-scrollable">
    <table class="table table-striped table-bordered table-advance table-hover">
        <thead>
            <tr>
                <th style="text-align: center;">
                    <i class="fa fa-cube"></i>
                    ID Establecimiento
                </th>
                <th style="text-align: center;">
                    <i class="fa fa-list-ul"></i>
                    Dirección/es
                </th>
                <th style="text-align: center;">
                    <i class="fa fa-bookmark"></i>
                    Razón social
                </th>
                <th style="text-align: center;">
                    <i class="fa fa-hand-o-down"></i>
                    Acción
                </th>
            </tr>
        </thead>
        <tbody>
            {% for i in 0..(((datos|length)/3)-1) %}
                <tr>
                    <td style="text-align: center;">
                        {{ datos[((i*3)+0)] }}
                    </td>
                    <td style="text-align: center;">
                        {{ datos[((i*3)+1)] }}
                    </td>
                    <td style="text-align: center;">
                        {% if datos[((i*3)+2)] == 'undefined' %}
                                {{ 'No tiene' }}
                            {% else %}
                                {{ datos[((i*3)+2)] }}
                        {% endif %}
                    </td>
                    <td style="text-align: center;">
                        <a href="javascript:MapaProgramacion.mostrarModalProgramar('{{ (datos[((i*3)+0)])|encriptar }}');" class="btn dark btn-sm btn-outline sbold uppercase">
                            <i class="fa fa-share"></i> Seleccionar
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>


<script>
    $(".modal-header").html('<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button><h4 class="modal-title">Full Width</h4>');
</script>